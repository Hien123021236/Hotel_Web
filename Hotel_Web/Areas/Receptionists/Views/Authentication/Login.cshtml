@using Hotel_Web.Areas.Receptionists.Models
@model Path


<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0 ,shrink-to-fit=no">
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/receptionists/login/css/style.css">
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-user-o"></span>
                        </div>
                        <h3 class="text-center mb-4">Sign In</h3>
                        <form action="/Receptionists/Authentication/Check" method="post" class="login-form">
                            <input type="hidden" name="area" value="@Model.Area">
                            <input type="hidden" name="ctrl" value="@Model.Ctrl">
                            <input type="hidden" name="act" value="@Model.Act">
                            <input type="hidden" name="pmt" value="@Model.Pmt">
                            <div class="form-group">
                                <input type="text" name="staffid" id="staffid" value="" class="form-control rounded-left" placeholder="Staff ID" autocomplete="username" required>
                            </div>
                            <div class="form-group d-flex">
                                <input type="password" name="password" id="password" value="" class="form-control rounded-left" placeholder="Password" autocomplete="current-password" required>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3" id="loginbtn">Login</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Remember Me
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#">Forgot Password</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

<script src="~/receptionists/login/js/jquery.min.js"></script>
<script src="~/receptionists/login/js/popper.js"></script>
<script src="~/receptionists/login/js/bootstrap.min.js"></script>
<script src="~/receptionists/login/js/main.js"></script>
